{
    "name": "ganttflow",
    "version": "1.0.2",
    "description": "A lightweight, modern, and interactive Gantt chart library for building project timelines on the web.",
    "main": "src/index.js",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build-dev": "vite build --watch",
        "build": "vite build",
        "test": "vitest run",
        "lint": "eslint src/**/*.js",
        "prettier": "prettier --write \"{src/*,tests/*,rollup.config}.js\"",
        "prettier-check": "prettier --check \"{src/*,tests/*,rollup.config}.js\""
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Akhi1Codes/gantt.git"
    },
    "files": [
        "src",
        "dist",
        "README.md"
    ],
    "exports": {
        ".": {
            "require": "./dist/gantt.umd.js",
            "import": "./dist/gantt.es.js"
        },
        "./style": "./dist/gantt.css"
    },
    "keywords": [
        "gantt chart",
        "gantt library",
        "gantt chart library",
        "gantt",
        "svg",
        "simple gantt",
        "project timeline",
        "interactive gantt",
        "project management"
    ],
    "author": "Akhil Reddy N V",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Akhi1Codes/gantt/issues"
    },
    "homepage": "https://github.com/Akhi1Codes/gantt",
    "devDependencies": {
        "eslint": "^9.32.0",
        "eslint-config-prettier": "^8.10.0",
        "eslint-plugin-prettier": "^5.5.3",
        "postcss-nesting": "^13.0.1",
        "prettier": "^3.2.5",
        "vite": "^6.3.2",
        "vitest": "^3.2.4"
    },
    "eslintIgnore": [
        "dist"
    ],
    "sideEffects": [
        "*.css"
    ]
}
